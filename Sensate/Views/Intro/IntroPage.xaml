<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 xmlns:local="clr-namespace:Sensate"
			 xmlns:vm="clr-namespace:Sensate.ViewModels" 
			 x:DataType="vm:IntroViewModel"
			 x:Class="Sensate.Views.IntroPage"
			 Shell.NavBarIsVisible="False"
			 >
    <ContentPage.Content>
		<FlexLayout
			Direction="Column"
			BackgroundColor="#12ABED"
			AlignItems="Center"
			JustifyContent="SpaceAround"
			>
			<Image 
				WidthRequest="320"
				HeightRequest="350"
				Source="{local:ImageResource Sensate.Assets.sensate-logo1.png}"
				/>
			<Label 
				Text="Sensate"
				TextColor="White"
				FontFamily="Leelawadee UI"
				FontSize="50"
				/>
			<Image 
				WidthRequest="52"
				Source="{local:ImageResource Sensate.Assets.loading.png}"
				/>

			<FlexLayout.GestureRecognizers>
				<SwipeGestureRecognizer Direction="Left" Command="{Binding SwipeCommand}" CommandParameter="left"/>
			</FlexLayout.GestureRecognizers>
		</FlexLayout>
    </ContentPage.Content>
</ContentPage>