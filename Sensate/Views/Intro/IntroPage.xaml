<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 xmlns:local="clr-namespace:Sensate"
			 xmlns:vm="clr-namespace:Sensate.ViewModels" 
			 xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
			 x:DataType="vm:IntroViewModel"
			 x:Class="Sensate.Views.IntroPage"
			 Shell.NavBarIsVisible="False"
			 Shell.FlyoutBehavior="Disabled">
    <ContentPage.Content>
		<FlexLayout Direction="Column" BackgroundColor="#12ABED"
					AlignItems="Center" JustifyContent="SpaceAround">
			<Image  WidthRequest="320" HeightRequest="350"
					Source="{xct:ImageResource Id=Sensate.Assets.For_Blue_Background.png}"/>
			<Label  Text="Sensate" TextColor="White" 
					FontFamily="Leelawadee UI" FontSize="50"/>
			<Image  WidthRequest="52" 
					Source="{xct:ImageResource Id=Sensate.Assets.loading.gif}"
			       		/>

			<FlexLayout.GestureRecognizers>
				<SwipeGestureRecognizer Direction="Left" Command="{Binding SwipeCommand}" CommandParameter="left"/>
			</FlexLayout.GestureRecognizers>
		</FlexLayout>
    </ContentPage.Content>
</ContentPage>
